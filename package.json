{
  "name": "golfrules-api",
  "version": "0.1.0",
  "description": "Open source API providing access to official golf rules. Enables easy retrieval of rule texts, versioning, and structured data — perfect for developers, clubs, and golf apps.",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts && prettier --check .",
    "lint:fix": "eslint . --ext .ts --fix && prettier --write .",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test": "pnpm test:unit && pnpm test:e2e",
    "pre-test-e2e": "pnpm build && pnpm start",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "RealGolf.Games UG (haftungsbeschränkt) & Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/realgolfgames/golfrules-api.git"
  },
  "license": "Apache-2.0",
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "dotenv": "^17.0.0",
    "fastify": "^5.4.0",
    "fastify-zod": "^1.4.0",
    "mongoose": "^8.16.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@fastify/autoload": "^6.3.1",
    "@fastify/env": "^5.0.2",
    "@playwright/test": "^1.53.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.1",
    "playwright": "^1.53.1",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
